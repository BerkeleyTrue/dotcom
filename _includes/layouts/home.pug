extends base.pug

block main
  main.mb-auto.mt-12
    .divide-y.divide-gray-400
      .pt-6.pb-8.space-y-2.md_space-y-5
        h1.text-3xl.font-extrabold.leading-9.tracking-tight.text-gray-900.dark_text-gray-100.sm_text-4xl.sm_leading-10.md_text-6xl.md_leading-14
          | #{title}
        | !{content}
      ul.divide-y.divide-gray-400
        each post in collections.posts
          li.py-12
            article
              .space-y-2.xl_grid.xl_grid-cols-4.xl_space-y-0.xl_items-baseline
                dl
                  dt.sr-only Publish on
                  dd.text-base.font-medium.leading-6.text-gray-500.dark_text-gray-400
                    time(datetime=post.date) #{dayjs(post.date).format('MMMM D, YYYY')}
                .space-y-5.xl_col-span-3
                  .space-y-6
                    div
                      a(href=post.url)
                        .text-2xl.font-bold.leading-8.tracking-tight.text-gray-900 #{post.data.title}
                        if post.data.tags
                          .flex.flex-wrap
                            each tag in post.data.tags
                              a.mr-3.text-sm.font-medium.uppercase.text-primary-500.hover_text-primary-600(href=`/tags/${tag}`)
                                | #{tag}

                    .prose.text-gray-500.max-w-none #{post.data.summary}
                  a.text-base.font-medium.leading-6.text-primary-500.hover_text-primary-600(aria-label=`Read "${post.data.title}"` href=post.url)
