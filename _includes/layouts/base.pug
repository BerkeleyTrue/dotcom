mixin navbar(isOpen)
  header.relative.flex.flex-row.justify-between.items-center.w-screen.shadow-lg.relative.h-24.bg-gray-400.px-4.md_hidden
    +letterhead(class='flex-grow')
    .flex.justify-center.space-x-4.mr-6
      a.text-xl.hover_text-gray-200.transition-colors.duration-200(href="https://twitter.com/berkeleytrue" target='_blank')
        +twitter()
      a.text-xl.hover_text-gray-200.transition-colors.duration-200(href="https://github.com/berkeleytrue" target='_blank')
        +github()
      a.text-xl.hover_text-gray-200.transition-colors.duration-200(href="https://linkedin.com/in/berkeleytrue" target='_blank')
        +linkedin()
    button.h-14.w-12.flex.items-center.justify-center.text-sm(id=isOpen ? 'open-button' : 'close-button')
      if isOpen
        .w-6.h-6
          +hamburger()
      else
        .w-6.h-6
          +cross()


body.relative.overflow-hidden.w-screen.h-screen.bg-gray-200.box-border.sm_text-lg

  div.h-screen.flex.flex-col.items-start.md_flex-row
    +navbar(true)
    #dropdown.h-screen.w-screen.absolute.bg-gray-300.transform.ease-in-out.duration-300.-translate-y-full.overflow-hidden.opacity-0
      +navbar(false)
      #posts.h-full.w-full.mt-10
        ul.h-full.w-full.flex.flex-col.items-center.flex-start.px-1

          each post in collections.posts
            a.mb-2.rounded-lg.bg-gray-400.h-10.w-60.max-w-full.hover_text-white.hover_bg-gray-600.transition-colors.duration-200(href=post.url)
              li.w-full.h-full.flex.items-center
                span.mx-4.text-lg.font-normal #{post.data.title}
                span.flex-grow.text-right

    aside.h-screen.shadow-lg.relative.w-80.bg-gray-400.pt-8.px-2.hidden.md_flex.flex-col
      +letterhead()
      nav.text-lg.mt-6.flex-grow
        ul.w-full.flex.flex-col.items-center.flex-start.px-1
          each post in collections.posts
            a.mb-2.rounded-lg.bg-gray-300.h-10.w-60.max-w-full.hover_bg-gray-600.hover_text-gray-200.transition-colors.duration-200(href=post.url)
              li.w-full.h-full.flex.items-center
                span.mx-4.text-lg.font-normal #{post.data.title}
                span.flex-grow.text-right

      footer.h-20.flex.flex-col.justify-between.py-2
        .flex.space-x-4.justify-center
          a.text-xl.hover_text-gray-200.transition-colors.duration-200(href="https://twitter.com/berkeleytrue" target='_blank')
            +twitter()
          a.text-xl.hover_text-gray-200.transition-colors.duration-200(href="https://github.com/berkeleytrue" target='_blank')
            +github()
          a.text-xl.hover_text-gray-200.transition-colors.duration-200(href="https://linkedin.com/in/berkeleytrue" target='_blank')
            +linkedin()
        a.flex.justify-center.text-sm.lg_text-lg(href='https://github.com/berkeleytrue/dotcom' target='_blank')
          This site is open source >=>
    div.w-full.flex-grow.px-4.max-w-screen-xl.mx-auto
      block main

script.

  const dropdown = document.getElementById('dropdown');

  const closeButton = document.getElementById('close-button');
  const openButton = document.getElementById('open-button');

  closeButton.addEventListener('click', () => {
    dropdown.classList.replace('translate-y-0', '-translate-y-full');
    dropdown.classList.replace('opacity-1', 'opacity-0');
  });
  openButton.addEventListener('click', () => {
    dropdown.classList.replace('-translate-y-full', 'translate-y-0');
    dropdown.classList.replace('opacity-0', 'opacity-1');
  });

